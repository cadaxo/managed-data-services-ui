<mvc:View controllerName="com.cadaxo.cmds.controller.Graph"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:m="sap.m" xmlns:l="sap.ui.layout" xmlns="sap.suite.ui.commons.networkgraph">
    <!--Graph enableWheelZoom="false" orientation="{settings>/orientation}" nodes="{/NODES}" lines="{/RELATIONS}" id="graph"
	noDataText="{i18n>noData}"-->
    <Graph enableWheelZoom="false"
        nodes="{graphModel>/nodes}"
        id="graph"
        lines="{graphModel>/links}"
	    noDataText="{i18n>noData}">
        <statuses>
			<Status key="TABL" title="Table" backgroundColor="blue"
			    borderColor="sapUiContentShadowColor" hoverBorderColor="sapUiContentShadowColor" />
            <Status key="DDLS" title="CDS View" backgroundColor="green"
			    borderColor="sapUiContentShadowColor" hoverBorderColor="sapUiContentShadowColor" />    
            <Status key="ASSOCIATION" title="Association" backgroundColor="green"
			    borderColor="sapUiContentShadowColor" hoverBorderColor="sapUiContentShadowColor" /> 
            <Status key="BASE" title="Base" backgroundColor="blue"
			    borderColor="sapUiContentShadowColor" hoverBorderColor="sapUiContentShadowColor" />  
            <Status key="ISUSED" title="Is Used" backgroundColor="red"
			    borderColor="sapUiContentShadowColor" hoverBorderColor="sapUiContentShadowColor" />                       
        </statuses>
        <nodes>
            <Node maxWidth="{maxWidth}" headerCheckBoxState="{headerCheckBoxState}" key="{graphModel>DsId}" title="{graphModel>ObjectName}"
                icon="sap-icon://table-view" 
                showActionLinksButton="false"
                showDetailButton="false"
                showExpandButton="false"
                shape="Circle"
                width="300"
                status="{graphModel>ObjectType}" 
                press="onNodePress">
                <actionButtons>
                    <ActionButton
                            icon="sap-icon://navigation-left-arrow"
                            title="Expand"
                            position="Left"
                            press="leftExpandPressed"/>
            
                    <ActionButton
                            icon="sap-icon://navigation-right-arrow"
                            title="Expand"
                            press="rightExpandPressed"/>
                </actionButtons>
            </Node>

        </nodes>
        <lines>
        <Line 
            from="{graphModel>ObjectId1}" 
            to="{graphModel>ObjectId2}"
            status="{graphModel>Type}" >
        </Line>
    </lines>
    </Graph>
</mvc:View>